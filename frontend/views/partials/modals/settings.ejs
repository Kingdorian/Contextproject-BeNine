<!-- Defines the modal used for settings editing -->
<div class="modal fade settings-modal" tabindex="-1" role="dialog" aria-labelledby="settings-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"><span class="glyphicon glyphicon-cog"></span> Settings</h4>
            </div>
            <div class="modal-body">
                <div class="modal-body row">
                    <h4><span class="glyphicon glyphicon-flash"></span> Control Sensitivity</h4>
                    <div class="col-xs-1 col-dm-1">
                        <div class="settings_sense">
                            <span>Zoom</span>
                            <input type="range" class="slider" id="zoomsense" min="0" max="10" value="5">
                            <label id="zoomsense_lbl"></label>
                        </div>
                    </div>
                    <div class="col-xs-1 col-dm-1">
                        <span>Iris</span>
                        <input type="range" class="slider" id="irissense" min="0" max="10" value="5">
                        <label id="irissense_lbl"></label>
                    </div>
                    <div class="col-xs-1 col-dm-1">
                        <span>Focus</span>
                        <input type="range" class="slider" id="focussense" min="0" max="10" value="5">
                        <label id="focussense_lbl"></label>
                    </div>
                    <div class="col-xs-1 col-dm-1">
                        <span>Joystick</span>
                        <input type="range" class="slider" id="joysticksense" min="0" max="10" value="5">
                        <label id="joysticksense_lbl"></label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary pull-left" onclick="defaults()">Reset to Defaults</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn " data-dismiss="modal"><span class="glyphicon glyphicon-ok"></span> Close</button>
            </div>
        </div>
    </div>
</div>