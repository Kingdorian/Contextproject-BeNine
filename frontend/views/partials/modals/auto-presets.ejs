<!-- Defines the modal used for automatically creating presets -->
<div id="auto_presets_div" class="modal fade auto-presets-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel"><span class="glyphicon glyphicon-wrench"></span>Automatically generate presets</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-4">
                        <div class="form-group">
                            <label for="auto_preset_name">Preset name (will be appended with a number for each preset)</label>
                            <input id="auto_preset_name" class="form-control" type="text">
                        </div>
                        <br>
                        <div class="form-group preset-create-tagsinput">
                            <label for="preset-create-tagsinput"><span class="glyphicon glyphicon-tags"></span> Tags</label><br>
                            <div class="tags_input">
                                <input id="tags_auto_preset" class="form-control" type="text" data-role="tagsinput"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-8">
                      <canvas id="previewCanvas" class="reviewCanvas img-responsive">
                        Your browser does not support the HTML5 canvas tag.
                      </canvas>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" onclick="autoCreatePresets()"><span class="glyphicon glyphicon-floppy-disk"></span>Create presets</button>
            </div>
        </div>
    </div>
</div>
